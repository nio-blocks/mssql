{
  "nio/MSSQLQuery": {
    "version": "1.0.0",
    "description": "Creates a cursor object for every list of signals, and creates a parameterized query that sanitizes user inputs.",
    "categories": [
      "Database"
    ],
    "properties": {
      "connection": {
        "title": "Database Connection",
        "type": "ObjectType",
        "description": "UID and PWD used for database authentication",
        "default": {
          "userid": "[[MSSQL_USER]]",
          "password": "[[MSSQL_PWD]]",
          "server": "[[MSSQL_SERVER]]",
          "port": "[[MSSQL_PORT]]",
          "database": "[[MSSQL_DB]]",
          "mars": false

        }
      },
      "enrich": {
        "title": "Signal Enrichment",
        "type": "ObjectType",
        "description": "enable signal enrichment",
        "default": {
          "enrich_field": "",
          "exclude_existing": true
        }
      },
      "id": {
        "title": "Id",
        "type": "StringType",
        "description": "block id",
        "default": null
      },
      "query": {
        "title": "Query",
        "type": "Type",
        "description": "Parameterized SQL query to execute",
        "default": "SELECT * FROM table where id=?"
      },
      "parameters": {
        "title": "Substitution Parameters",
        "type": "ListType",
        "description": "List of parameters that will be typed and substituted into the query.",
        "default": []
      }
    },
    "inputs": {
      "default": {
        "description": "Any list of signals"
      }
    },
    "outputs": {
      "No Results": {
        "description": "One signal, with a null results value"
      },
      "Results": {
        "description": "One signal per list of signals processed, with a results value array of all returned rows"
      }
    },
    "commands": {}
  }
}
